<% if current_user.role == 'RFB' %>
  <div class="container w-50">
    <div class='card justify-content-center mt-3'>
      <div class='card-body'>
        <div class="container text-center mt-2 pt-2">
          <h2>Detalhes da ordem nº <%= @order.id %></h2>
          <p>(requisição nº <%= @request.id %> e produto nº <%= @product.id %>)</p>
        </div>
        <div class="mt-3 pl-3">
          <h5 class="mb-3">Nome empresarial: <%= @request.user.entity_name %></h5>
          <h5 class="mb-3">CNPJ: <%= @order.request.user.cnpj %></h5>
          <p>Data da ordem: <%= @order.created_at.strftime("%d/%m/%Y") %></p>
          <p>Categoria: <%= @product.category.name %></p>
          <p>Produto: <%= @product.name %></p>
          <p>Quantidade: <%= @order.request.quantity %></p>
          <p>Situação: <%= @order.status %></p>
          <p>Usuário: <%= @order.request.user.first_name %></p>
        </div>
        <div class="container pl-3">
        <%= link_to 'Voltar', orders_path %> |
        <%= link_to 'Atualizar', edit_order_path(@order) %> |
        <%= link_to 'Excluir', order_path(@order), method: :delete, data: { confirm: 'Tem certeza que quer excluir esta ordem?'}, class: 'btn btn-outline-danger' %>
        </div>
      </div>
    </div>
  </div>
<% end %>