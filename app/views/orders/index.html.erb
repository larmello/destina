<% if current_user.role == 'RFB' %>
  <div class="container d-flex justify-content-around">
    <div class="mt-3 justify-content-center">
      <h1>Ordens</h1>
    </div>
  </div>

  <div class="container d-flex mt-2">
    <div class="container">
      <div>
        <table class="table table-bordered table-striped">
          <thead class="thead-light text-center">
            <tr>
              <th scope="col">Nº</th>
              <th scope="col">Data</th>
              <th scope="col">CNPJ</th>
              <th scope="col">Quantidade</th>
              <th scope="col">Situação</th>
              <th scope="col">Usuário</th>
              <th scope="col" colspan="3">Opções</th>
            </tr>
          </thead>
          <% @orders.each do |order| %>
            <tr>
              <td class="text-center"><%= order.id %></td>
              <td class="text-center"><%= order.created_at.strftime("%d/%m/%Y") %></td>
              <td class="text-center"><%= order.request.user.cnpj %></td>
              <td class="text-center"><%= order.request.quantity %></td>
              <td class="text-center"><%= order.status %></td>
              <td class="text-center"><%= order.user.first_name %></td>
              <td class="text-center"><%= link_to "Ver ordem", request_product_order_path(order.request, order.product, order), class: "btn btn-outline-primary" %></td>
              <td class="text-center"><%= link_to "Ver requisição", request_path(order.request), class: "btn btn-outline-primary" %></td>
              <td class="text-center"><%= link_to "Ver mercadoria", product_path(order.product), class: "btn btn-outline-primary" %></td>
            </tr>
          <% end %> 
        </table>
      </div>
    </div>
  </div>
<% end %>