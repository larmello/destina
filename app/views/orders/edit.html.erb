<% if current_user.role == 'RFB' %>
  <div class="container w-50 mt-3">
    <h2 class="text-center">Atualizar Ordem nº <%= @order.id %></h2>
      <!--%= render 'form', order: @order %-->
    <%= simple_form_for([@request, @product, @order]) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <h4 class="text-center"><strong> Requisição nº </strong><%= @order.request_id %></h4>
      <div class="mt-3">
        <p><strong> Entidade/órgão: </strong><%= @order.request.user.entity_name %></p>
        <p><strong> Descrição: </strong><%= @order.request.description %></p>
        <p><strong> Mercadoria: </strong><%= @order.product.description %></p>
        <p><strong> Categoria: </strong><%= @order.product.category.name %> </p>
        <%= f.input :status, as: :select, collection: ['Reservada', 'Aguarda Documentos', 'Entregue'] %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.button :submit, 'Atualizar', class: 'btn btn-primary' %>
    </div>
    <% end %>
    <%= link_to 'Voltar', orders_path %>
  </div>
<% end %>
