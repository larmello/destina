<% if current_user.role == 'RFB' %>
  <div class="container">
    <h2 class="text-center">Atualizar Ordem</h2>
      <!--%= render 'form', order: @order %-->
    <%= simple_form_for([@request, @product, @order]) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <div class="form-inputs">
      <p><em> Requisição de </em> <%= @order.request.user.entity_name %>: <%= @order.request.description %></p>
      <p><em> Mercadoria: </em><%= @order.product.description %></p>
      <p><em> Categoria: </em><%= @order.product.category.name %> </p>
      <%= f.input :status, as: :select, collection: ['Reservada', 'Aguarda Documentos', 'Entregue'] %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, 'Atualizar', class: 'btn btn-primary' %>
    </div>
    <% end %>
    <%= link_to 'Voltar', orders_path %>
  </div>
<% end %>
