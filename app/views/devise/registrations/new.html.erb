<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :cpf, label: 'CPF',
                required: true,
                autofocus: true,
                input_html: { autocomplete: "cpf" }%>
    <%= f.input :first_name, label: 'Nome',
                required: true,
                input_html: { autocomplete: "first_name" }%>
    <%= f.input :last_name, label: 'Sobrenome',
                required: true,
                input_html: { autocomplete: "last_name" }%>
    <%= f.input :cnpj, label: 'CNPJ',
                required: true,
                input_html: { autocomplete: "cnpj" }%>
    <%= f.input :address, label: 'Endereço da entidade ou órgão',
                required: true,
                input_html: { autocomplete: "address" }%>
    <%= f.input :email, label: 'E-mail',
                required: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password, label: 'Insira sua senha',
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation, label: 'Confirme sua senha',
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
