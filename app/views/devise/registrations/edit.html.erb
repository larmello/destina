<div class="container col-xs-12 col-sm-6 col-sm-offset-6 mt-3">
  <h2 class="text-center">Editar cadastro do <%= @user.first_name.to_s.humanize %></h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :cnpj, label: 'CNPJ da entidade ou órgão',
                  required: true,
                  placeholder: "14 dígitos - digite somente números",
                  input_html: { autocomplete: "cnpj" } %>
      <%= f.input :entity_name, label: 'Nome da entidade ou órgão',
                  required: true,
                  input_html: { autocomplete: "entity-name" } %>
      <%= f.input :entity_type, as: :select, collection: ['Órgão Público', 'Entidade Social', 'RFB'], label: 'Tipo de entidade ou órgão',
                  required: true %>
      <%= f.input :address, label: 'Endereço da entidade ou órgão',
                  required: true,
                  input_html: { autocomplete: "entity-type" } %>
      <%= f.input :cpf, label: 'CPF responsável legal',
                  required: true,
                  autofocus: true,
                  placeholder: "11 dígitos - digite somente números",
                  input_html: { autocomplete: "cpf" } %>
      <%= f.input :first_name, label: 'Nome',
                  required: true,
                  input_html: { autocomplete: "first-name" } %>
      <%= f.input :last_name, label: 'Sobrenome',
                  required: true,
                  input_html: { autocomplete: "last-name" } %>
      <%= f.input :password,
                  hint: "Deixe em branco se não quer alterar a senha",
                  required: false, label: "Nova senha",
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: false, label: "Repetir nova senha",
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :current_password,
                  hint: "Insira sua senha atual para confirmar as alterações",
                  required: true, label: "Senha atual",
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :photo, as: :file, label: 'Incluir sua imagem ou da entidade ou órgão (opcional)' %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Salvar alterações", class: "btn btn-primary mb-3" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

  <h3>Cancelar minha conta</h3>
  <p>Excluir conta? <%= link_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Tem certeza?" }, method: :delete %></p>
  <%= link_to "Back", :back %>
</div>