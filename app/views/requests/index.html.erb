<div class="container d-flex justify-content-around">
  <div class="justify-content-center">
    <h1>Requisições</h1>
  </div>
</div>
<div class="container">
  <% if current_user.role == 'RFB' %>
    <div class="mt-2 col-6">
      <%= simple_form_for :search, url: requests_path, method: :get do |f| %>
        <div class="search-form-control form-group">
          <input class="form-control string required" type="text" name="query" id="query"/>
          <button name="button" type="submit" class="btn btn-flat" >
            <i class="fas fa-search"></i>Pesquisar
          </button>
        </div>
      <% end %>
    </div>
  <% end %>
  <div class="row">
    <% if current_user.role == 'RFB' %>
      <table class="table table-bordered table-striped">
        <thead class="thead-light text-center">
          <tr>
            <th scope="col">Nº</th>
            <th scope="col">Data</th>
            <th scope="col">CNPJ</th>
            <th scope="col">Entidade</th>
            <th scope="col">Categoria</th>
            <th scope="col">Descrição</th>
            <th scope="col">Quantidade</th>
            <th scope="col">Status</th>
            <th scope="col" colspan="2">Opções</th>
          </tr>
        </thead>
        <% @requests.each do |request| %>
          <tr>
            <td class="text-center"><%= request.id %></td>
            <td class="text-center"><%= request.created_at.strftime("%d/%m/%Y") %></td>
            <td class="text-center"><%= request.user.cnpj %></td>
            <td class="text-center"><%= request.user.entity_name %></td>
            <!-- Category retornando errado -->
            <td class="text-center"><%= request.category.name.capitalize %></td>
            <td class="text-center"><%= request.description %></td>
            <td class="text-center"><%= request.quantity %></td>
            <% if request.status == 'Em analise'%>
              <td class="text-center"><i class="far fa-hourglass" aria-hidden="true"></i> <strong><%= request.status %></strong></td>
            <% elsif request.status == 'Aprovado' %>
              <td class="text-center"><i class="fa fa-check" aria-hidden="true"></i><strong><%= request.status %></strong></td>
            <% elsif request.status == 'Rejeitado' %>
              <td class="text-center"><i class="fa fa-times" aria-hidden="true"></i><strong><%= request.status %></strong></td>
            <% end %>
            <div>
              <td class="text-center"><%= link_to 'Consultar', request_path(request), class: 'btn btn-outline-primary' %></td>
              <td class="text-center"><%= link_to 'Excluir', request_path(request), method: :delete, data: { confirm: 'Confirma apagar a requisição?'}, class: 'btn btn-outline-danger' %></td>
            </div>
          </tr>
        <% end %>
      </table>
    <% else %>
      <div class="col-4">
        <div class="card-trip" >
          <%= image_tag "entidadesocial" %>
          <div class="card-trip-infos">
            <div>
              <h2>Entidade:</h2>
              <p><%= current_user.entity_name %></p>
            </div>
            <div>
              <h2>Tipo da entidade:</h2>
              <p><%= current_user.entity_type %></p>
            </div>
          </div>
        </div>
      </div>
  <%# FIM DO CARD DA ENTIDADE %>
      <div class="col-8">
        <table class="table table-bordered table-striped">
          <thead class="thead-light text-center">
            <tr>
              <th scope="col">Nº</th>
              <th scope="col">Categoria</th>
              <th scope="col">Quantidade</th>
              <th scope="col">Data Pedido</th>
              <th scope="col">Status</th>
              <th scope="col">Ordem</th>
              <th scope="col">Ação</th>
            </tr>
          </thead>
          <% current_user.requests.each do |request| %>
              <tr>
                <td class="text-center"><%= request.id %></td>
                <td class="text-center"><span data-tooltip=<%= request.description %>><%= request.category.name.capitalize %></span></td>
                <td class="text-center"><%= request.quantity %></td>
                <td class="text-center"><%= request.created_at.strftime("%d/%m/%Y") %></td>
                <% if request.status == 'Em analise'%>
                  <td class="text-center"><i class="far fa-hourglass" aria-hidden="true"></i><strong><%= request.status %></strong></td>
                <% elsif request.status == 'Aprovado' %>
                  <td class="text-center"><i class="fa fa-check" aria-hidden="true"></i><strong><%= request.status %></strong></td>
                <% elsif request.status == 'Rejeitado' %>
                  <td class="text-center"><i class="fa fa-times" aria-hidden="true"></i><strong><%= request.status %></strong></td>
                <% else %>
                  <td class="text-center"><i class="fa fa-check" aria-hidden="true"></i><strong><%= request.status %></strong></td>
                <% end %>
                <% unless request.product.nil? || request.status != 'Aprovado' %>
                  <td class="text-center"><%= link_to 'Aceitar', request_product_path(request, request.product) %></td>
                <% else %>
                  <td></td>
                <% end %>
                <td class="text-center">
                  <%= link_to '', request_path(request), class: 'fa fa-eye' %>
                  <%= link_to '', edit_request_path(request), class: "fa fa-edit" %>
                  <% if request.status == 'Aprovado'%>
                    <button type="button" data-toggle="modal" data-target="#exampleModalLong"><i class="fas fa-envelope-open-text" aria-hidden="true"></i></button>
                  <% else %>
                    <i class="fas fa-envelope"></i>
                  <% end %>
                  <%= link_to '', request_path(request), method: :delete, data: { confirm: 'Confirma apagar o pedido?'}, class: "fa fa-trash" %>
                </td>
              </tr>
          <% end %>
        </table>
        <a class="btn btn-primary" href="<%= new_request_path %>">Nova requisição</a>
      </div>
    <% end %>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Orientações</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'docs', request: @request %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
      </div>
    </div>
  </div>
</div>
