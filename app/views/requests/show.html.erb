<% if current_user.role == 'RFB' %>
  <div class="container">
    <h2 class="text-center">Lista de requerimentos da entidade ou órgão</h2>
    <p><strong>CNPJ:</strong> <%= @user.entity_name %></p>
    <p><strong>Nome empresarial:</strong> <%= @user.cnpj %></p>
    <div class="row justify-content-left align-items-center">  
      <table class="table table-bordered table-striped">
        <thead class="thead-light text-center">
          <tr>
            <th scope="col">Categoria</th>
            <th scope="col">Descrição</th>
            <th scope="col">Quantidade</th>
            <th scope="col">Situação</th>
            <th scope="col" colspan="2">Opções</th>
          </tr>
        </thead>
        <% @user.requests.each do |request| %>
            <tr>
              <td class="text-center"><%= request.category.name %></td>
              <td class="text-center"><%= request.description %></td>
              <td class="text-center"><%= request.quantity %></td>
              <td class="text-center"><%= request.status %></td>
              <td class="text-center"><%= link_to 'Consultar Produtos', request_products_path(request, @products), class: 'btn btn-outline-primary' %></td>
              <td class="text-center"><a class="btn btn-outline-primary" href="<%= "/requests/#{request.id}/products?query=#{request.category.name}&button=" %>">Consultar Produtos</a></td>
              <td class="text-center"><%= link_to 'Excluir', request_path(request), method: :delete, data: { confirm: 'Are you sure you want to delete this request?'}, class: 'btn btn-outline-danger' %></td>
            </tr>
          <% end %> 
      </table>
    </div>
    <div style="min-height: 42vh;">
    <%= link_to 'Voltar', :back %> 
    </div>
  </div>
<% else %>
<% end %>