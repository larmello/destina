<div class="container">
  <h2 class="text-center">Lista de requerimentos</h2>
  <p><strong>CNPJ da Entidade:</strong> <%= @user.entity_name %></p>
  <p><strong>Nome da Entidade:</strong> <%= @user.cnpj %></p>
</div>

<div class="container">
  <div class="row justify-content-left align-items-center">  
  </div>
</div>  
  <div>
    <table class="table table-bordered table-striped">
      <thead class="thead-light text-center">
        <tr>
          <th scope="col">Categoria</th>
          <th scope="col">Descrição</th>
          <th scope="col">Quantidade</th>
          <th scope="col">Situação</th>
          <th scope="col">Opção</th>
        </tr>
      </thead>
      <% @user.requests.each do |request| %>
          <tr>
            <td class="text-center"><%= request.category.name %></td>
            <td class="text-center"><%= request.description %></td>
            <td class="text-center"><%= request.quantity %></td>
            <td class="text-center"><%= request.status %></td>
            <td class="text-center"><%= link_to 'Cancel', request_path(request), method: :delete, data: { confirm: 'Are you sure you want to delete this request?'}, class: 'btn btn-outline-danger' %></td>
          </tr>
        <% end %> 
    </table>
  </div>

</div>
<div style="min-height: 42vh;">
</div>
