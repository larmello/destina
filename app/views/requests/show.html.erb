<div class="container">
  <h2><%= @request.description %></h2>
</div>

<div class="container">
  <div class="row justify-content-left align-items-center">  
  </div>
</div>  
  <div>
    <table class="table table-bordered table-striped">
      <thead class="thead-light text-center">
        <tr>
          <th scope="col">Categoria</th>
          <th scope="col">Descrição</th>
          <th scope="col">Quantidade</th>
          <th scope="col">Tipo Entidade</th>
          <th scope="col">Status</th>
        </tr>
      </thead>
      <% @user.requests.each do |request| %>
          <tr>
            <td class="text-center"><%= request.category %></td>
            <td class="text-center"><%= request.description %></td>
            <td class="text-center"><%= request.quantity %></td>
            <td class="text-center"><%= request.entity_type %></td>
            <td class="text-center"><%= link_to 'Cancel', request_path(request), method: :delete, data: { confirm: 'Are you sure you want to delete this request?'}, class: 'btn btn-outline-danger' %></td>
          </tr>
        <% end %> 
    </table>
  </div>

</div>
<div style="min-height: 42vh;">
</div>