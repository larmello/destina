<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown active">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Requerimentos
          </a>
          <% if current_user.role == 'RFB' %>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="<%= requests_path %>">Consultar requerimentos</a>
            </div>
          <% else %>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="<%= requests_path %>">Consultar requerimentos</a>
              <a class="dropdown-item" href="<%= new_request_path %>">Criar requerimento</a>
            </div>
            <% end %>
        </li>
          <% if current_user.role == 'RFB' %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Produtos
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="<%= products_path %>">Consultar produtos</a>
                <a class="dropdown-item" href="<%= new_product_path %>">Criar produto</a>
              </div>
            </li>
          <% end %>
          <% if current_user.role == 'RFB' %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Ordens
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="<%= orders_path %>">Consultar ordens</a>
              </div>
            </li>
          <% end %>
        <span class="nav-link">
          <strong><%= "#{current_user.first_name}" %></strong>
          <strong><%= " (#{current_user.role})" %></strong>
        </span>
        </li>
        <li class="nav-item dropdown">
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag "person-placeholder.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <% if current_user.role == 'RFB' %>
              <%= link_to "Requerimentos", requests_path, class: "dropdown-item" %>
              <%= link_to "Produtos", products_path, class: "dropdown-item" %>
              <%= link_to "Ordens", orders_path, class: "dropdown-item" %>
            <% else %>
              <%= link_to "Requerimentos", requests_path, class: "dropdown-item" %>
              <%= link_to "Criar requerimento", new_request_path, class: "dropdown-item" %>
            <% end %>
            <%= link_to "Sair", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Entrar", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
